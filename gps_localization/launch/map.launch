<launch>

    <!-- ********************** ARGUMENTS ********************** -->

    <!-- SF Mission bay UTM coordinates -->

    <arg name="x" value="553915"/>
    <arg name="y" value="4180712"/>
    <arg name="z" value="0"/>

    <!-- Map file -->
    <arg name="map_name" value="mission_bay_1.txt"/>

    <!-- Other arguments for TF - generic for all maps -->
    <arg name="yaw" value="0"/>
    <arg name="pitch" value="0"/>
    <arg name="roll" value="0"/>
    <arg name="frame_id" value="world"/>
    <arg name="child_frame_id" value="map"/>
    <arg name="period_ms" value="100"/>

    <!-- ********************** NODES ********************** -->

    <!-- TF -->
    <node pkg="tf" type="static_transform_publisher" name="tf_world_to_map" args="$(arg x) $(arg y) $(arg z) $(arg yaw) $(arg pitch) $(arg roll) $(arg frame_id) $(arg child_frame_id) $(arg period_ms)" />

    <!-- MAP MARKER PUBLISHER -->
    <node pkg="gps_localization" type="map_publisher.py" name="map_marker_publisher" output="screen">
        <param name="map_name" type="str" value="$(arg map_name)" />
    </node>

    <!-- RVIZ -->
    <!-- <node type="rviz" name="rviz" pkg="rviz" args="-d /home/shared_dir/rviz_config/rtk_gps_1.rviz" /> -->

</launch>
